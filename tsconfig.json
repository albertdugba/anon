{
  "compilerOptions": {
    "baseUrl": "/",
    "paths": {
      "@/*": ["src/components/*"],
      "@/utils/*": ["src/utils/*"],
      "@icons/*":["public/icons/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["cypress"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
     "**/*.ts",
     "**/*.tsx",
     "pages/**/*",
 "components/**/*",
 "next.config.js" 
],
  "exclude": ["node_modules"]
}
